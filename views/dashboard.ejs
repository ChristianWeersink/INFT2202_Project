<% const title = "Dashboard"; %>
<%- include('header', {title: title}) %>


<h1><%=title %></h1>
<h2 id='welcome_msg'></h2>
<script>
    // Get the value of the "user" cookie
    let userInfo = getCookie('user');
    let userBUTTS = JSON.parse(userInfo);

    // Check if the userInfo cookie exists
    if (!userInfo) {
        // Redirect to login page if userInfo cookie is not found
        window.location.href = "./sign-in";
    } else {

        $('#welcome_msg').html("Welcome: " + userBUTTS.username);
    }
</script>

<%- include('footer') %>
