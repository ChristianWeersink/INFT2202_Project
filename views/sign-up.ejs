<% const title = "Sign Up"; %>
<%- include('./includes/header', {title: title}) %>


<div class="centertext">

    <h1><%=title %></h1>

    </div>
    <div class="centertext">
    <form id="sign-up" class="Forms">
            <div class="input_items">
            <label for="su_name">Your Username:</label>
            <input type="text" id="su_name" name="su_name" required><br><br>
            </div>

            <div class="input_items">
            <label for="su_email">Your Email:</label>
            <input type="email" id="su_email" name="su_email" required>
            </div>
        
            <div class="input_items">
            <label for="su_password">Your Password:</label>
            <input type="password" id="su_password" name="su_password" required>
            <br>
            </div>

            <div class="input_items" id="conf_id">
            <label for="su_confirm_password">Confirm Password:</label>
            <input type="password" id="su_confirm_password" name="su_confirm_password" required>
            </div>

            <br>
            <button type="button" id="showPassword" class="spButton">Show Password</button>
        
        <br><br>
        <input type="submit" value="Sign Up">
        
    </form>
    <p id="message" ></p>
</div>



<script src="./scripts/sign-up.js"></script>







<%- include('./includes/footer') %>

<script>
    //redirect if they are logged in already
    const loggedIn = getCookie("loggedIn");
    if(loggedIn){
        window.location.href = "/dashboard";
    }

</script>