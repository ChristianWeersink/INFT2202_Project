<% const title = "Sign Up"; %>
<%- include('header', {title: title}) %>

<div class="centertext">

    <h1><%=title %></h1>

    </div>
    <div class="centertext">
    <form id="sign-up" >
        
            <label for="su_name">Choose a Username:</label>
            <input type="text" id="su_name" name="su_name" required><br><br>
        
            <label for="su_email">Your Email:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
            <input type="email" id="su_email" name="su_email" required><br><br>
        
            <label for="su_password">Choose a Password:</label>
            <input type="password" id="su_password" name="su_password" required>
            <br>
            
            <button type="button" id="showPassword" class="spButton">Show Password</button>
        
        <br><br>
        <input type="submit" value="Sign Up">
    </form></div>



<script>
    // If the content is loaded properly, functions below will work
    document.addEventListener("DOMContentLoaded", function() {
        const newPassword = document.getElementById("su_password");
        const showThePass = document.getElementById("showPassword");

        // On click, change the input type and text on button
        showThePass.addEventListener("click", function() {
            if (newPassword.type === "password") {
                newPassword.type = "text";
                showThePass.textContent = "Hide Password";
            } else {
                newPassword.type = "password";
                showThePass.textContent = "Show Password";
            }
        });
    });



</script>







